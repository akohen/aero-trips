{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "sitemap",
        "destination": "/sitemap.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
